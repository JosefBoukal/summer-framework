<included>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{"HH:mm:ss.SSS"} %5p [%t] %-25logger{25}: %m %n</pattern>
        </encoder>
    </appender>

    <root level="ERROR">
        <appender-ref ref="CONSOLE"/>
    </root>

    <logger name="org.summerframework" level="DEBUG"/>

    <logger name="org.springframework" level="INFO"/>

</included>